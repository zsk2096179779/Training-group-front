.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f6f8fa;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.login-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.login-title {
  font-size: 36rpx;
  color: #222;
  font-weight: bold;
}

.login-form {
  width: 80vw;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 60rpx 40rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-input {
  width: 100%;
  height: 88rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid #e5e6eb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  background: #f7f8fa;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: #3478f6;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  font-weight: bold;
}

.register-btn {
  width: 100%;
  height: 88rpx;
  background: #fff;
  color: #3478f6;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: 2rpx solid #3478f6;
  font-weight: bold;
} 
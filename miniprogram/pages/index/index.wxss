/**index.wxss**/
page, body, .index-container {
  background: #f6f8fa;
  margin: 0;
  padding: 0;
}

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.index-container {
  min-height: 100vh;
  padding-bottom: 0;
}

.header-card {
  width: 100vw;
  background: #3b82f6;
  border-radius: 32rpx;
  padding: 48rpx 24rpx 36rpx 24rpx;
  color: #fff;
  position: relative;
  box-sizing: border-box;
  margin-bottom: 36rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  padding-right: 80rpx;
}

.header-user {
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.header-assets {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.asset-item {
  flex: 1;
  text-align: center;
}

.asset-label {
  font-size: 24rpx;
  color: #e0e6f6;
}

.asset-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 8rpx;
}

.product-section {
  margin: 0 24rpx;
}

.section-title {
  font-size: 32rpx;
  color: #222;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.product-scroll {
  height: calc(100vh - 240rpx); /* 240rpx为header-card实际高度，可根据实际调整 */
  overflow-y: scroll;
  padding-bottom: 16rpx;
}

.product-list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
  margin: 32rpx 0 24rpx 24rpx;
}

.product-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(52,120,246,0.10);
  margin-top: 0;
  margin-bottom: 24rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  transition: box-shadow 0.2s;
}

.product-card:hover {
  box-shadow: 0 12rpx 40rpx rgba(52,120,246,0.18);
}

.product-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
}

.product-tags {
  display: flex;
  gap: 12rpx;
}

.product-tag-blue {
  background: #f0f4ff;
  color: #3478f6;
  font-size: 22rpx;
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
}

.product-tag-gold {
  background: #fff8e1;
  color: #cfa93e;
  font-size: 22rpx;
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
  border: 1rpx solid #ffe082;
}

.product-body {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 32rpx;
}

.product-rate {
  color: #cfa93e;
  font-size: 48rpx;
  font-weight: bold;
  display: flex;
  align-items: flex-end;
  gap: 4rpx;
}

.rate-label {
  font-size: 28rpx;
  color: #cfa93e;
}

.product-desc {
  color: #888;
  font-size: 24rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-footer {
  display: flex;
  justify-content: flex-end;
}

.product-btn {
  background: linear-gradient(90deg, #3478f6 0%, #cfa93e 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  padding: 12rpx 36rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(52,120,246,0.10);
  transition: background 0.2s;
}

.product-btn:active {
  background: linear-gradient(90deg, #cfa93e 0%, #3478f6 100%);
}

.index-menu-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  z-index: 100;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(52,120,246,0.10);
}

.menu-icon {
  width: 36rpx;
  height: 36rpx;
}

page, .container, .index-page {
  padding-top: 0 !important;
  margin-top: 0 !important;
}

.product-detail-page {
  padding: 32rpx 0 0 0;
  background: linear-gradient(180deg, #f8fafc 0%, #f6fafd 100%);
  /* min-height: 100vh; */
}

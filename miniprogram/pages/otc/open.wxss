.open-container {
  padding: 32rpx;
  background: #f7faff;
  min-height: 100vh;
}
.open-title {
  font-size: 40rpx;
  color: #1769fa;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.open-desc {
  color: #bfa14a;
  margin-bottom: 40rpx;
}
.form-item {
  margin-bottom: 32rpx;
}
.form-item text {
  display: block;
  color: #333;
  margin-bottom: 8rpx;
}
input {
  border: 1px solid #e5e5e5;
  border-radius: 8rpx;
  padding: 16rpx;
  background: #fff;
}
.open-btn {
  background: linear-gradient(90deg, #1769fa, #bfa14a);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  margin-top: 24rpx;
} 
.order-list-container {
  padding: 24rpx;
  background: #f7f8fa;
}
.order-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  padding: 32rpx 28rpx 28rpx 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  position: relative;
}
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 18rpx;
}
.order-product-name {
  font-size: 38rpx;
  font-weight: 800;
  color: #222;
  line-height: 1.3;
  max-width: 70%;
  word-break: break-all;
}
.order-product-type {
  font-size: 26rpx;
  color: #ff9800;
  background: #fff7e6;
  border-radius: 12rpx;
  padding: 6rpx 22rpx;
  font-weight: 700;
  margin-left: 12rpx;
  white-space: nowrap;
}
.order-info-row {
  margin-bottom: 12rpx;
  font-size: 30rpx;
  color: #555;
  display: flex;
  align-items: center;
}
.order-amount {
  color: #ff4d4f;
  font-weight: bold;
  margin-left: 10rpx;
  font-size: 34rpx;
}
.buy-again-btn {
  width: 60%;
  margin: 28rpx auto 0 auto;
  display: block;
  background: linear-gradient(90deg, #4f8cff 0%, #ffd700 100%);
  color: #222;
  font-weight: bold;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  padding: 12rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(79,140,255,0.08);
  letter-spacing: 2rpx;
}
.empty {
  text-align: center;
  color: #bbb;
  margin-top: 80rpx;
  font-size: 28rpx;
}
.back-home-btn-container {
  margin-bottom: 24rpx;
  text-align: left;
}
.back-home-btn {
  background: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  border-radius: 10rpx;
  padding: 12rpx 32rpx;
  border: none;
  margin-bottom: 8rpx;
} 
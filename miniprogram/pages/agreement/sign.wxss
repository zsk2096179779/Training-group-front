.agreement-container {
  padding: 32rpx;
  background: #f7faff;
  min-height: 100vh;
}
.agreement-title {
  font-size: 36rpx;
  color: #1769fa;
  font-weight: bold;
  margin-bottom: 32rpx;
}
.agreement-block {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(23,105,250,0.06);
  margin-bottom: 40rpx;
  padding: 24rpx 20rpx 16rpx 20rpx;
}
.agreement-name {
  font-size: 30rpx;
  color: #222;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.agreement-content {
  max-height: 300rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #444;
}
.agreement-checkbox {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #1769fa;
  margin-bottom: 8rpx;
}
.agree-btn {
  background: linear-gradient(90deg, #1769fa, #bfa14a);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  margin-top: 24rpx;
}
.close-btn {
  margin-top: 16rpx;
  background: #bfa14a;
  color: #fff;
  border-radius: 16rpx;
}
.popup-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.35);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.popup-content {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(23,105,250,0.10);
  width: 80vw;
  max-width: 600rpx;
  padding: 40rpx 32rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 24rpx;
  text-align: center;
}
.popup-btns {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 32rpx;
}
.disagree-btn {
  flex: 1;
  margin-right: 16rpx;
  background: #eee;
  color: #bfa14a;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  padding: 16rpx 0;
} 
.purchase-container {
  padding: 32rpx;
  background: #f7faff;
  min-height: 100vh;
}
.purchase-title {
  font-size: 36rpx;
  color: #1769fa;
  font-weight: bold;
  margin-bottom: 32rpx;
}
.product-info {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(23,105,250,0.06);
  padding: 24rpx;
  margin-bottom: 24rpx;
}
.product-name {
  font-size: 30rpx;
  color: #222;
  font-weight: bold;
}
.product-type {
  color: #bfa14a;
  margin-bottom: 8rpx;
}
.product-id {
  color: #888;
  font-size: 24rpx;
}
.account-info {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(23,105,250,0.06);
  padding: 24rpx;
  margin-bottom: 24rpx;
}
.amount-input {
  border: 1px solid #e5e5e5;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin: 16rpx 0;
  width: 100%;
  background: #f9f9f9;
}
.amount-tip {
  color: #888;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}
.risk-tip {
  display: flex;
  align-items: flex-start;
  background: #fffbe6;
  border-radius: 12rpx;
  padding: 16rpx;
  color: #bfa14a;
  font-size: 24rpx;
  margin-bottom: 32rpx;
}
.submit-btn {
  background: linear-gradient(90deg, #1769fa, #bfa14a);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  margin-top: 24rpx;
} 
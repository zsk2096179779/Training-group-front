.summary-container {
  padding: 32rpx;
  background: #f7f8fa;
}
.summary-header {
  margin-bottom: 32rpx;
}
.summary-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 12rpx;
}
.summary-total {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.total-amount {
  color: #ff4d4f;
  font-size: 36rpx;
  font-weight: bold;
}
.product-item {
  background: #fff;
  border-radius: 14rpx;
  margin-bottom: 24rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}
.product-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 8rpx;
}
.product-type {
  font-size: 24rpx;
  color: #ff9800;
  background: #fff7e6;
  border-radius: 10rpx;
  padding: 2rpx 14rpx;
  display: inline-block;
  margin-bottom: 10rpx;
}
.product-amount {
  font-size: 28rpx;
  color: #555;
  margin-top: 6rpx;
}
.empty {
  text-align: center;
  color: #bbb;
  margin-top: 80rpx;
  font-size: 28rpx;
}
.back-home-btn-container {
  margin-bottom: 24rpx;
  text-align: left;
}
.back-home-btn {
  background: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  border-radius: 10rpx;
  padding: 12rpx 32rpx;
  border: none;
  margin-bottom: 8rpx;
}
.product-risk {
  font-size: 24rpx;
  color: #d4380d;
  font-weight: 500;
  margin: 4rpx 0 0 0;
} 
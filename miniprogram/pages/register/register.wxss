.register-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f6f8fa;
}

.register-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.register-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.register-title {
  font-size: 36rpx;
  color: #222;
  font-weight: bold;
}

.register-form {
  width: 80vw;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 60rpx 40rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.register-input {
  width: 100%;
  height: 88rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid #e5e6eb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  background: #f7f8fa;
}

.register-btn-main {
  width: 100%;
  height: 88rpx;
  background: #3478f6;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
  font-weight: bold;
  margin-top: 48rpx;
}

.register-back {
  position: absolute;
  top: 40rpx;
  left: 32rpx;
  z-index: 10;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.8);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.icon-back {
  font-size: 40rpx;
  color: #3478f6;
  font-weight: bold;
} 